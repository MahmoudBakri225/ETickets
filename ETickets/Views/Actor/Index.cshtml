@model IEnumerable<Actor>

@{
    ViewData["Title"] = "List of Actors";
}

<div class="row">
    <div class="col-md-8 offset-md-2">

        <table class="table">
            <thead>
                <tr class="text-center">
                    <th>@Html.DisplayNameFor(model => model.ProfilePicture)</th>
                    <th>@Html.DisplayNameFor(model => model.FirstName )</th>
                    <th>@Html.DisplayNameFor(model => model.News)</th>
                    <th>Actions</th>

@*                     @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                    {
                        <th>Actions</th>
                    } *@
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            @if (!string.IsNullOrEmpty(item.ProfilePicture))
                            {

                                <img src="/images/cast/@item.ProfilePicture" alt="Actor Image" style="max-width:200px; max-height: 200px; border-radius: 10px; display: block; margin: 50 auto; margin-bottom: 20px;" />
                            }
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.FirstName)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.News)
                        </td>
                       
                        
                            <td class="align-middle">
                            <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-box-arrow-in-right"></i>Edit </a>
                            <span style="padding: 5px;"></span>
                            <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-box-arrow-in-right"></i>Details </a>
                            <span style="padding: 5px;"></span>
                            <a class="btn btn-danger text-white" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-box-arrow-in-right"></i>Delete </a>
                            </td>
                        
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>

@await Html.PartialAsync("_CreateItem", "Actors")
